---
import data from "../../../public/JSON/conceptos.json";
import Layout from "../../layouts/Layout.astro";
interface Concepto {
  termino: string;
  definicion: string;
  img: string;
}

interface ConceptosData {
  conceptos: Concepto[];
}

const Conceptos = data as ConceptosData;
---

<Layout>
  <section class="w-[80%] lg:w-[50%] m-auto mt-24">
    <div>
      <h1 class="font-bold text-center text-4xl my-12">
        D
      </h1>
      {
        Conceptos.conceptos
          .filter((concepto) =>
            concepto.termino.toLowerCase().startsWith("d")
          )
          .map((concepto) => (
            <div class="flex flex-col lg:grid grid-cols-2 justify-center items-center">
              <div class="flex flex-col m-2 p-4">
                <p class="font-bold">{concepto.termino}</p>
                <p>{concepto.definicion}</p>
              </div>
              <img
                src={concepto.img}
                alt={concepto.termino}
                class="m-auto my-2 size-64 object-center object-contain"
              />
            </div>
          ))
      }
    </div>
  </section>
</Layout>
